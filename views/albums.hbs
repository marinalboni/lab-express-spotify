<div class="background">
	<h1 class="title">ALBUMS</h1>
	<div class="artists-grid">
		{{#each album}}
			<div class="artist-card">
				<img src="{{this.images.0.url}}" alt="album" />
				<div class="card-text">
					<h5>{{this.name}}</h5>
					<a href="/tracks/{{this.id}}" class="btn btn-danger">View Tracks</a>
				</div>
			</div>
		{{/each}}
	</div>
</div>