<div>
	<table class="table">
		<thead class="table-light">
			<tr class="table-pad">
				<td class="table-title">TITLE</td>
				<td class="table-title">LISTEN</td>
			</tr>
		</thead>
		<tbody>
			{{#each tracks as |track|}}
				<tr>
					<td>{{this.name}}</td>
					<td>
						<audio controls>
							<source src="{{this.preview_url}}" type="audio/mp3" />
						</audio>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	<div>
		<a href="/" class="go-back-btn">Go Back to Search</a>
	</div>
</div>